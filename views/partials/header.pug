header.header
    .header__wrapper
        .header__column
            a(href=routes.home)
                i.fas.fa-home
        .header__column
            form(action=routes.search, method="get")
                input(type="text", placeholder="Search by the term...", name="term")
        .header__column
            ul
                if !loggedUser
                    li
                        a(href=routes.join) Join
                    li
                        a(href=routes.login) Log In
                    li
                        a(href=routes.gameHome) Play Game! 
                else 
                    li
                        a(href=`/video/${routes.uploadVideo}`) Video Upload
                    li
                        a(href=routes.me) Profile
                    li
                        a(href=routes.logout) Log Out

