mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsVolumeButton
                    i.fas.fa-volume-up
                span
                    span#currentTime 00:00:00
                    span  / 
                    span#totalTime 00:00:00
                input.videoPlayer__volume#jsVolume(type="range", min="0" max="1" value="0.5" step="0.1")
            .videoPlayer__column
                span#jsForwardButton
                    i.fas.fa-forward
                span#jsPlayButton
                    i.fas.fa-play
                span#jsBackwardButton  
                    i.fas.fa-backward
            .videoPlayer__column
                span#jsFullScreen
                    i.fas.fa-expand